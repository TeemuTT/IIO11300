<Window x:Class="H1MediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H1MediaPlayer"
        mc:Ignorable="d"
        Title="MediaPlayer" Height="350" Width="525" FontFamily="Consolas" FontSize="16">
    <Grid>
        <Button x:Name="btnPlay" Content="Play" Margin="10,10,10,0" VerticalAlignment="Top" Width="75" HorizontalAlignment="Left"/>
        <Button x:Name="btnPause" Content="Pause" Margin="90,10,10,0" VerticalAlignment="Top" Width="75" HorizontalAlignment="Left"/>
        <Button x:Name="btnStop" Content="Stop" Margin="170,10,10,0" VerticalAlignment="Top" Width="75" HorizontalAlignment="Left"/>
    </Grid>
</Window>
