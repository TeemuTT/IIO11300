<Window x:Class="XmlMovies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XmlMovies"
        mc:Ignorable="d"
        Title="Elokuvagalleria" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize">
    <Grid VerticalAlignment="Top">
        <StackPanel VerticalAlignment="Top" Width="500">
            <Button x:Name="btnOpenMovies1" Content="Elokuvagalleria 1" Click="btnOpenMovies1_Click" FontSize="14.667" Margin="2,2,2,0"/>
            <Button x:Name="btnOpenMovies2" Content="Elokuvagalleria 2" FontSize="14.667" Margin="2,3,2,0" Click="btnOpenMovies2_Click"/>
            <Button x:Name="btnClose" Content="Sulje" FontSize="14.667" Margin="2,3,2,2" Click="btnClose_Click"/>
        </StackPanel>

    </Grid>
</Window>
